{
	"name": "kedniko/vivy",
	"description": "PHP validator",
	"autoload": {
		"psr-4": {
			"Kedniko\\Vivy\\": "src/",
			"Kedniko\\Vivy\\Call\\": "src/.svn/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\": "tests/app/",
			"Tests\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": "^8.2.0",
		"brick/math": "^0.11.0",
		"kedniko/vivy-plugin-standard": "dev-main",
		"nette/php-generator": "^4.1",
		"nikic/php-parser": "^4.15.5"
	},
	"require-dev": {
		"pestphp/pest": "*",
		"fakerphp/faker": "*",
		"laravel/pint": "*",
		"phpstan/phpstan": "*",
		"rector/rector": "*",
		"symfony/var-dumper": "*"
	},
	"config": {
		"sort-packages": true,
		"preferred-install": "dist",
		"allow-plugins": {
			"pestphp/pest-plugin": true
		}
	},
	"bin": [
		"bin/vivy"
	],
	"scripts": {
		"refacto": "rector",
		"lint": "pint",
		"test:refacto": "rector --dry-run",
		"test:lint": "pint --test",
		"test:types": "phpstan analyse --ansi",
		"test": "pest --colors=always",
		"scan": "php ./bin/vivy",
		"test:all": [
			"@test:refacto",
			"@test:lint",
			"@test:types",
			"@test:unit"
		]
	},
	"repositories": [
		{
			"type": "path",
			"url": "../vivy-plugin-standard"
		}
	]
}
